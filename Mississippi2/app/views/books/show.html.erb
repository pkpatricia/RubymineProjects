<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>

<p>
  <strong>Publication date:</strong>
  <%= @book.publication_date %>
</p>

<p>
  <strong>Page count:</strong>
  <%= @book.page_count %>
</p>

<p>
  <strong>Language:</strong>
  <%= @book.language %>
</p>

<p>
  <strong>Price:</strong>
  <%= @book.price %>
</p>

<p>
  <strong>Author:</strong>
  <table class="table">
    <tr>
      <th>Name</th>
      
    </tr>
    <% @book.authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
      </tr>
    <% end %>
  </table>
</p>

<%= link_to 'Edit', edit_book_path(@book) %> |
